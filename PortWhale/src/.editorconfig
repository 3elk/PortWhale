# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*.cs]
charset = utf-8
end_of_line = crlf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# CSharp code style settings
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = true:suggestion
csharp_prefer_braces = true:warning

# Suppress specific warnings
dotnet_diagnostic.CS8604.severity = silent
dotnet_diagnostic.CS8600.severity = silent
dotnet_diagnostic.CA1822.severity = silent
dotnet_diagnostic.CS1591.severity = silent
dotnet_diagnostic.CS8602.severity = silent
dotnet_diagnostic.CS8618.severity = silent
dotnet_diagnostic.IDE0017.severity = silent
dotnet_diagnostic.IDE0059.severity = silent
dotnet_diagnostic.CA1050.severity = silent
dotnet_diagnostic.CA2007.severity = silent

# Naming rules
dotnet_naming_rule.private_members_with_underscore.symbols  = private_fields
dotnet_naming_rule.private_members_with_underscore.style    = prefix_underscore
dotnet_naming_rule.private_members_with_underscore.severity = suggestion

dotnet_naming_symbols.private_fields.applicable_kinds           = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private

dotnet_naming_style.prefix_underscore.capitalization = camel_case
dotnet_naming_style.prefix_underscore.required_prefix = _